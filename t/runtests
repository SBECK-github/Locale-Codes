#!/bin/sh

# Usage:
#   runtests [-T] [prefix]
#
# Runs all tests (or those starting with prefix),optionally in taint mode

if [ -z "$TI_MODE" ]; then
   TI_MODE='inter'
   export TI_MODE
fi

if [ -z "$TI_QUIET" ]; then
   TI_QUIET=2
   export TI_QUIET
fi

if [ "$RELEASE_TESTING" != "0" ]; then
   RELEASE_TESTING=1
   export RELEASE_TESTING
fi

if [ "$1" = "-T" ]; then
   taint="-T -I../lib -I."
   shift
else
   taint=
fi

subset=$1

for test in ${subset}*.t ;do
  perl $taint ./$test
done
